@import "../ignore/common.styl"

input,
textarea,
button
	width 100%
	border-radius 5px
	


input,
textarea,
button
	min-height 35px
	font-size 17px

textarea
	height 120px
	overflow-y hidden
	line-height 1.5
	

button 
	color #fff
	font-weight 600
	line-height 2.5
	background-color $mainColor
	opacity 0.7


.form-box
	width 80%
	margin 70px auto 0 auto

.form-top
	text-align center
.form-top-text
	font-size 20px

.form-contain
	margin-top 20px
	position relative
	&::before
		position absolute
		content ""
		left 0
		right 0
		top -5px
		border 1px solid rgba(204,204,204,0.5)


.label-li
	margin-top 20px
	padding 5px
	box-shadow 8px 8px 14px  #888
	border-radius 5px
	background-color #fff



.form-btn	
	margin 65px 0 20px 0

.word-count,
.label-text
	margin-top 8px
	text-align right
	color #888
.game-text
	padding 5px
	font-size 12px


