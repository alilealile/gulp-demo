
$mainColor = #6DB2F5
$padding = 15px

$clear()
  content ''
  display block
  visibility: hidden
  height 0
  clear: both


$flex-column()
	display flex
	flex-direction column


//弹出框
.js_dialog
	display none
.mask
	position fixed
	z-index 1000
	top 0
	right 0
	bottom 0
	left 0
	background-color rgba(0,0,0,0.6)
.dialog
	position fixed
	z-index 5000
	width 80%
	max-width 300px
	top 50%
	left 50%
	-webkit-transform translate(-50%, -50%)
	transform translate(-50%, -50%)
	background-color #FFFFFF
	text-align center
	border-radius 3px
	overflow hidden
.dialog__hd
	padding 1.3em 1.6em 0.5em
	font-size 18px
.dialog__bd
	padding 0 1.6em 0.8em
	min-height 40px
	font-size 15px 
	line-height 1.3
	word-wrap break-word
	word-break break-all
	color #999
.dialog__ft
	position relative
	display flex
	font-size 18px
	line-height 48px
	&:before
		height 1px
		right 0
		border-top 1px solid #D5D5D6
		transform scaleY(0.5)
.dialog__btn
	flex 1
	position relative
	color #353535
	&:before
		width 1px
		bottom 0
		border-left 1px solid #D5D5D6
		transform scaleX(0.5)
.dialog__btn_primary
		color $mainColor
.dialog__ft:before,
.dialog__btn:before
	content ''
	position absolute
	left 0
	top 0
	color #D5D5D6
	transform-origin 0 0




